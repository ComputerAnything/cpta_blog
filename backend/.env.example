# Backend Environment Variables Example

# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development || staging || production
SECRET_KEY=<your_secret_key_here>

# Local PostgreSQL (Development)
DATABASE_URL=postgresql://<user>:<password>@<host>:<port>/<database>
# Neon PostgreSQL (Staging / Production)
DATABASE_URL=postgresql://<user>:<password>@<host>:<port>/<database>?sslmode=require&channel_binding=require

# JWT Configuration
JWT_SECRET_KEY=<your_jwt_secret_key_here>
JWT_ACCESS_TOKEN_EXPIRES=86400

# Email Configuration (Resend)
RESEND_API_KEY=<your_resend_api_key_here>
MAIL_DEFAULT_SENDER=<noreply_email_here>

# Admin Email
ADMIN_EMAIL=<your_admin_email_here>

# CAPTCHA (Cloudflare Turnstile)
TURNSTILE_SECRET_KEY=<your_cloudflare_turnstile_secret_key_here>

# Redis Configuration (for rate limiting across multiple workers)
# Generate a strong random password for production: openssl rand -base64 32
REDIS_PASSWORD=<your_redis_password_here>
# Docker: redis://:password@redis:6379/0
# Local: redis://:password@localhost:6379/0
# Production/Staging: Use same password in both REDIS_PASSWORD and REDIS_URL
# Development: Use weak password for convenience (e.g., "changeme")
# Leave blank to use in-memory (NOT recommended for production with multiple workers)
REDIS_URL=redis://:your_redis_password_here@redis:6379/0

# Frontend URL (for email links and CORS)
FRONTEND_URL=http://localhost:5173

# Server Port
PORT=8000
